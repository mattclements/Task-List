<%= form_for(@task, :html => {:class => 'nice'}) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation" class="alert-box error">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
		<a href="" class="close">&times;</a>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'oversize input-text' %>
  </div>
  <div class="field">
    <label for="task_completed">
    <%= f.check_box :completed %>
	Completed
	</label>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
